<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVPMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="commonBtnStyle">
        <item name="android:layout_height">@dimen/btn_height_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_corner_25</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/content_text_default</item>
        <item name="android:textColor">@color/white</item>
    </style>





</resources>