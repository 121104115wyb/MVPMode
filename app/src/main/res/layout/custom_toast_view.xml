<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/middle_padding_default"
    android:background="@drawable/toast_view_bg"
    android:minHeight="100dp">

    <TextView
        android:id="@+id/toastTitle"
        style="@style/TitleText"
        android:text="@string/dialog_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toastContent"
        style="@style/ContentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_layout_margin_default"
        android:layout_marginEnd="@dimen/min_layout_margin_default"
        android:layout_marginBottom="@dimen/min_layout_margin_default"
        android:text="多，人之常情，谁也向往舒舒服服的生活。"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/toastImg"
        app:layout_constraintStart_toStartOf="@id/toastTitle"
        app:layout_constraintTop_toBottomOf="@id/toastTitle" />

    <ImageView
        android:id="@+id/toastImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toastTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>